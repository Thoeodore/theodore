#include<stdio.h>
#include<conio.h> 
void main()
{
int x,y,i;
clrscr();
printf(" Y------> \n"); 
printf(" 0"); 
for(i=1;i<10;i++)
{
printf("--");
}
printf("\n"); 
for(x=1;x<=10;x++)
{
y=x; 
if(x==5) 
printf("X|"); 
else
printf(" |"); 
for(i=1;i<y;i++)
{
printf("*");
}
printf("\n");
}
for(i=1;i<=1;i++)
{
printf(" |\n");
}
getch();
}
